<!-- The contents of this file will be loaded for each web application -->
<Context>

    <!-- Default set of monitored resources -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!--
    <Manager pathname="" />
    -->

    <!-- Uncomment this to enable Comet connection tacking (provides events
         on session expiration as well as webapp lifecycle) -->
    <!--
    <Valve className="org.apache.catalina.valves.CometConnectionManagerValve" />
    -->

{{- $enableGeoDB := getenv "ENABLE_GEODB" }}
{{- if eq $enableGeoDB "true" }}
<Resource name="jdbc/geodb"
          auth="Container"
          type="javax.sql.DataSource"
          factory="com.zaxxer.hikari.HikariJNDIFactory"
          driverClassName="org.postgresql.Driver"
          jdbcUrl="jdbc:postgresql://{{ getenv "POSTGRES_HOST" "postgresql" }}:{{ getenv "POSTGRES_PORT" "5432" }}/{{ getenv "POSTGRES_DB" "geodb" }}"
          username="{{ getenv "POSTGRES_USER" "geodb" }}"
          password="{{ getenv "POSTGRES_PASSWORD" "secret" }}"
          closeMethod="close"
          minimumIdle="5" maximumPoolSize="25" connectionTimeout="300000" maxLifetime="1800000" />
{{- end }}

{{- $enableJndi := getenv "ENABLE_JNDI" }}
{{- if eq $enableJndi "true" }}
<Resource name="jdbc/jdbcconfig"
          auth="Container"
          type="javax.sql.DataSource"
          factory="com.zaxxer.hikari.HikariJNDIFactory"
          driverClassName="org.postgresql.Driver"
          jdbcUrl="jdbc:postgresql://{{ getenv "POSTGRES_HOST" "postgresql" }}:{{ getenv "POSTGRES_PORT" "5432" }}/{{ getenv "POSTGRES_DB" "geodb" }}"
          username="{{ getenv "JDBCCONFIG_USER" "geoserverconfig" }}"
          password="{{ getenv "JDBCCONFIG_PASSWORD" "secret" }}"
          closeMethod="close"
          minimumIdle="2" maximumPoolSize="10" connectionTimeout="300000" maxLifetime="1800000" />
{{- end }}

</Context>
